@{
}
@model Movie
<form asp-action="Edit" method="post" class="w3-container w3-card-4 w3-light-grey">
    <input type="hidden" asp-for="movieId" value="@Model.movieId" />
    <label for="category" asp-for="category">Category: </label>
    <select id="category" asp-for="category" class="w3-input w3-border w3-round">
        @if (Model.category == "Action/Adventure")
        {
            <option selected>Action/Adventure</option>
        }
        else
        {
            <option>Action/Adventure</option>
        }
        @if (Model.category == "Comedy")
        {
            <option selected>Comedy</option>
        }
        else
        {
            <option>Comedy</option>
        }
        @if (Model.category == "Drama")
        {
            <option selected>Drama</option>
        }
        else
        {
            <option>Drama</option>
        }
        @if (Model.category == "Family")
        {
            <option selected>Family</option>
        }
        else
        {
            <option>Family</option>
        }
        @if (Model.category == "Horror/Suspense")
        {
            <option selected>Horror/Suspense</option>
        }
        else
        {
            <option>Horror/Suspense</option>
        }
        @if (Model.category == "Miscellaneous")
        {
            <option selected>Miscellaneous</option>
        }
        else
        {
            <option>Miscellaneous</option>
        }
        @if (Model.category == "Television")
        {
            <option selected>Television</option>
        }
        else
        {
            <option>Television</option>
        }
        @if (Model.category == "VHS")
        {
            <option selected>VHS</option>
        }
        else
        {
            <option>VHS</option>
        }
    </select><br />
    <label for="title" asp-for="title">Title: </label>
    <input type="text" id="title" asp-for="title" value="@Model.title" class="w3-input w3-border w3-round"/><br />

    <label for="year" asp-for="year">Year: </label>
    <input type="text" id="year" asp-for="year" value="@Model.year" class="w3-input w3-border w3-round"/><br />

    <label for="director" asp-for="director">Director: </label>
    <input type="text" id="director" asp-for="director"  value="@Model.director" class="w3-input w3-border w3-round"/><br />

    <label for="rating" asp-for="rating">Rating: </label>
    <select id="rating" asp-for="rating" class="w3-input w3-border w3-round">
        @if (Model.rating == "G")
        {
            <option selected value="G">G</option>
        }
        else
        {
            <option value="G">G</option>
        }
        @if (Model.rating == "PG")
        {
            <option selected value="PG">PG</option>
        }
        else
        {
            <option value="PG">PG</option>
        }
        @if (Model.rating == "PG-13")
        {
            <option selected value="PG-13">PG-13</option>
        }
        else
        {
            <option value="PG-13">PG-13</option>
        }
        @if (Model.rating == "R")
        {
            <option selected value="R">R</option>
        }
        else
        {
            <option value="R">R</option>
        }
        @if (Model.rating == "UR")
        {
            <option selected value="UR">UR</option>
        }
        else
        {
            <option value="UR">UR</option>
        }
        @if (Model.rating == "NR")
        {
            <option selected value="NR">NR</option>
        }
        else
        {
            <option value="NR">NR</option>
        }
        @if (Model.rating == "TV-Y7")
        {
            <option selected value="TV-Y7">TV-Y7</option>
        }
        else
        {
            <option value="TV-Y7">TV-Y7</option>
        }
        @if (Model.rating == "TV-PG")
        {
            <option selected value="TV-PG">TV-PG</option>
        }
        else
        {
            <option value="TV-PG">TV-PG</option>
        }
        @if (Model.rating == "TV-14")
        {
            <option selected value="TV-14">TV-14</option>
        }
        else
        {
            <option value="TV-14">TV-14</option>
        }
        @if (Model.rating == "TV-MA")
        {
            <option selected value="TV-MA">TV-MA</option>
        }
        else
        {
            <option value="TV-MA">TV-MA</option>
        }
    </select><br />

    <label for="edited" asp-for="edited">Edited: </label>
    <select asp-for="edited" class="w3-input w3-border w3-round">
        @if (Model.edited)
        {
            <option selected value="true">Yes</option>
            <option value="false">No</option>
        }
        else
        {
            <option value="true">Yes</option>
            <option selected value="false">No</option>
        }

    </select><br />

    <label for="lentTo" asp-for="lentTo">Lent to: </label>
    <input type="text" id="lentTo" asp-for="lentTo" value="@Model.lentTo" class="w3-input w3-border w3-round"/><br />

    <label for="notes" asp-for="notes">Notes: </label>
    <input type="text" rows="3" id="notes" asp-for="notes" value="@Model.notes" class="w3-input w3-border w3-round"/><br />


    <input type="submit" value="Submit" class="btn btn-outline-primary shadow"/>
    <!--puts out warnings if fields aren't entered-->
    <div asp-validation-summary="All"></div>
</form>