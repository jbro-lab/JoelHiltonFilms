@{
}

@model IEnumerable<JoelHiltonFilms.Models.Movie>
<div>
    <table>
        <thead>
            <tr>
                <th>Category</th>
                <th>Title</th>
                <th>Year</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Edited</th>
                <th>Lent To</th>
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (JoelHiltonFilms.Models.Movie movie in Model)
            {
            <tr>
                <td>@movie.category</td>
                <td>@movie.title</td>
                <td>@movie.year</td>
                <td>@movie.director</td>
                <td>@movie.rating</td>
                <td>@movie.lentTo</td>
                <td>@movie.notes</td>
            </tr>
            }

        </tbody>
    </table>
</div>